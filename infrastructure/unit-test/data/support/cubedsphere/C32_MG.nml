!--------------------------------------------------------------------
! Example namelists for mesh generation
!--------------------------------------------------------------------
&mesh
  mesh_file_prefix = 'mesh_C32_MG'
  geometry         = 'spherical'
  topology         = 'periodic'
  n_meshes         = 5
  mesh_names       = 'C32','C16','C12','C8','C4'
  mesh_maps        = 'C32:C16','C16:C8','C8:C4','C12:C4'
  partition_mesh   = .false.
  coord_sys        = 'll'
  rotate_mesh      = .false.
/

&cubedsphere_mesh
  edge_cells          = 32, 16, 12, 8, 4
  equatorial_latitude = 0.0
  smooth_passes       = 0
/
