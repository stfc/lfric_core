module sample_poly_flux_kernel_mod_test

  use constants_mod,                 only : i_def, r_def
  use pFUnit_Mod
  use yaxt,                          only : xt_initialize, xt_finalize
  use mpi_mod,                       only : store_comm, clear_comm

  implicit none

  private
  public :: test_all

  @TestCase
  type, extends(MPITestCase), public :: sample_poly_flux_test_type
    private
  contains
    procedure setUp
    procedure tearDown
    procedure test_all
  end type sample_poly_flux_test_type

  integer(i_def), parameter :: element_order = 0

contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  subroutine setUp( this )

    use finite_element_config_mod, only : finite_element_cellshape_quadrilateral
    use mesh_mod,                  only : PLANE_BI_PERIODIC

    implicit none

    class(sample_poly_flux_test_type), intent(inout) :: this

    ! Initialise YAXT
    call xt_initialize(this%getMpiCommunicator())
    ! Store the MPI communicator for later use
    call store_comm(this%getMpiCommunicator())

  end subroutine setUp

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  subroutine tearDown( this )

    implicit none

    class(sample_poly_flux_test_type), intent(inout) :: this

    ! Finalise YAXT
    call xt_finalize()
    ! Clear the stored MPI communicator
    call clear_comm()

  end subroutine tearDown

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @Test( npes=[1] )
  subroutine test_all( this )

    use sample_poly_flux_kernel_mod, only : sample_poly_flux_code, &
                                            sample_poly_flux_init

    use get_unit_test_m3x3_q3x3x3_sizes_mod, only: get_w2_m3x3_q3x3x3_size,    &
                                                   get_w3_m3x3_q3x3x3_size

    use get_unit_test_w2nodal_basis_mod, only: get_w2_w2nodal_basis

    use get_unit_test_m3x3_dofmap_mod, only: get_w2_m3x3_dofmap,           &
                                             get_w3_m3x3_dofmap,           &
                                             get_m3x3_stencil_dofmap_cross

    use get_unit_test_planar_mesh_mod, only: get_out_face_normal

    implicit none

    class(sample_poly_flux_test_type), intent(inout) :: this

    real(r_def), parameter :: tol = 1.0e-12_r_def

    real(r_def) :: answer

    integer(i_def) :: cell

    ! Variables for testing sample_poly_flux
    real(r_def), allocatable :: flux_data(:)
    real(r_def), allocatable :: u_data(:)
    real(r_def), allocatable :: rho_data(:)

    real(r_def), allocatable :: basis_w2(:,:,:)

    ! dofmaps
    integer(i_def), allocatable :: map_w2(:,:)
    integer(i_def), allocatable :: map_w3(:,:)

    integer(i_def), allocatable :: stencil_map_w2(:,:,:)
    integer(i_def)              :: stencil_size

    integer(i_def) :: ndf_w2, undf_w2
    integer(i_def) :: ndf_w3, undf_w3

    real(r_def), allocatable :: out_face_normal(:,:)

    integer(i_def) :: nlayers
    ! Dummy variable for passing into multi-getter routines where item is not needed
    integer(i_def) :: unused

    ! Get canned data for a 3-layer mesh
    nlayers=3

    ! Get sizes
    call get_w2_m3x3_q3x3x3_size( ndf_w2, undf_w2, unused, &
                                  unused, unused,          &
                                  unused, unused,          &
                                  nlayers )

    call get_w3_m3x3_q3x3x3_size( ndf_w3, undf_w3, unused, &
                                  unused, unused,          &
                                  unused, unused,          &
                                  nlayers )

    call get_w2_w2nodal_basis(basis_w2)

    ! Get dofmaps
    call get_w2_m3x3_dofmap(map_w2)
    call get_w3_m3x3_dofmap(map_w3)

    ! Get cross stencil maps
    call get_m3x3_stencil_dofmap_cross(stencil_map_w2, map_w2)
    stencil_size=5

    ! Create the data
    allocate(flux_data(undf_w2))
    allocate(u_data(undf_w2))
    allocate(rho_data(undf_w3))

    cell = 5
    u_data(:) = 0.0_r_def
    rho_data(:) = 2.0_r_def

    rho_data(stencil_map_w2(1,1,cell)) = 3.0_r_def
    rho_data(stencil_map_w2(1,2,cell)) = 1.0_r_def
    rho_data(stencil_map_w2(1,4,cell)) = 5.0_r_def

    ! Initialise kernel
    call sample_poly_flux_init(2, nlayers)
    flux_data(:) = 0.0_r_def

    call get_out_face_normal(out_face_normal)

    call sample_poly_flux_code( nlayers,                  &
                                flux_data,                &
                                u_data,                   &
                                rho_data,                 &
                                stencil_size,             &
                                stencil_map_w2(:,:,cell), &
                                ndf_w2,                   &
                                undf_w2,                  &
                                map_w2(:,cell),           &
                                basis_w2,                 &
                                ndf_w3,                   &
                                undf_w3,                  &
                                map_w3(:,cell),           &
                                out_face_normal )

     answer = 0.0_r_def
     @assertEqual(answer, flux_data(map_w2(3,cell) ), tol)
     answer = 0.0_r_def
     @assertEqual(answer, flux_data(map_w2(2,cell) ), tol)
     answer = 0.0_r_def
     @assertEqual(answer, flux_data(map_w2(6,cell) ), tol)

     deallocate(flux_data)
     deallocate(u_data)
     deallocate(rho_data)
     deallocate(stencil_map_w2)
     deallocate(map_w2)
     deallocate(map_w3)
     deallocate(basis_w2)
     deallocate(out_face_normal)

  end subroutine test_all

end module sample_poly_flux_kernel_mod_test
