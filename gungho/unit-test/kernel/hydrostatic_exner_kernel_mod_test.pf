!> Test the pressure initialization computation
!>
module hydrostatic_exner_kernel_mod_test

  use constants_mod,                 only : i_def, r_def, str_long
  use function_space_collection_mod, only : function_space_collection_type, &
                                            function_space_collection
  use mesh_collection_mod,           only : mesh_collection_type, &
                                            mesh_collection
  use field_mod,                     only : field_type, &
                                            field_proxy_type
  use function_space_mod,            only : function_space_type
  use formulation_config_mod,        only : init_exner_bt
  use fs_continuity_mod,             only : W0, W3, WTHETA
  use pFUnit_Mod
  use quadrature_xyoz_mod,           only : quadrature_xyoz_type, &
                                              quadrature_xyoz_proxy_type
  use quadrature_rule_gaussian_mod,  only : quadrature_rule_gaussian_type
  use yaxt,                          only : xt_initialize, xt_finalize
  use mpi_mod,                       only : store_comm, clear_comm

  implicit none

  private
  public :: hydrostatic_exner_test_type, test_bottom_up, test_top_down

  @TestCase(npes=[1])
  type, extends(MPITestCase) :: hydrostatic_exner_test_type
    private
    type( quadrature_xyoz_type )          :: qr
    type(quadrature_xyoz_proxy_type)      :: qr_proxy
    type( quadrature_rule_gaussian_type ) :: quadrature_rule
    type(function_space_type), pointer    :: w0_fs => null()
    type(function_space_type), pointer    :: wt_fs => null()
    type(function_space_type), pointer    :: w3_fs => null()
    type(field_type)                      :: exner, theta, chi(3)
    type(field_type)                      :: height_wt, height_w3
    real(r_def), allocatable              :: basis_w0(:,:,:,:)
  contains
    procedure setUp
    procedure tearDown
    procedure test_bottom_up
    procedure test_top_down
  end type hydrostatic_exner_test_type

  integer(i_def), parameter :: element_order = 0

  real(r_def), parameter :: bvf_square = 0.0001_r_def
  real(r_def), parameter :: theta_surf = 300.0_r_def

  real(r_def), parameter :: gravity = 10.0_r_def
  real(r_def), parameter :: radius  = 6000000_r_def
  real(r_def), parameter :: omega   = 8.0E-5_r_def
  real(r_def), parameter :: p_zero  = 100000.0_r_def
  real(r_def), parameter :: rd      = 300.0_r_def
  real(r_def), parameter :: cp      = 1000.0_r_def
  real(r_def), parameter :: scaling = 1.0_r_def

contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  subroutine setUp( this )

    use base_mesh_config_mod,      only : base_mesh_geometry_planar, &
                                          base_mesh_partitioner_planar
    use finite_element_config_mod, only : finite_element_cellshape_quadrilateral
    use gungho_feign_config_mod,   only : feign_base_mesh_config,           &
                                          feign_initial_temperature_config, &
                                          feign_planet_config,              &
                                          feign_idealised_config,           &
                                          feign_initial_density_config
    use idealised_config_mod,      only : idealised_test_gravity_wave
    use mesh_mod,                  only : PLANE_BI_PERIODIC

    implicit none

    class(hydrostatic_exner_test_type), intent(inout) :: this

    type(field_proxy_type)    :: chi_p(3)
    type(field_proxy_type)    :: exner_proxy, theta_proxy
    type(field_proxy_type)    :: height_wt_proxy, height_w3_proxy
    type( quadrature_rule_gaussian_type ) :: quadrature_rule

    integer(i_def) :: nqp_h, nqp_v
    integer(i_def) :: ndf_w0, ndf_wt, ndf_w3
    integer(i_def) :: undf_w0, undf_wt, undf_w3
    integer(i_def) :: dim_w0
    integer(i_def) :: mesh_id

    integer(i_def) :: i

    ! Initialise YAXT
    call xt_initialize(this%getMpiCommunicator())
    !Store the MPI communicator for later use
    call store_comm(this%getMpiCommunicator())

    call feign_base_mesh_config                             &
             ( filename='foo', prime_mesh_name='unit_test', &
               geometry=base_mesh_geometry_planar,          &
               partitioner=base_mesh_partitioner_planar,    &
               fplane=.false., f_lat_deg=0.0_r_def )

    call feign_initial_temperature_config( bvf_square=bvf_square, &
                                           theta_surf=theta_surf )

    call feign_planet_config( gravity=gravity, radius=radius, omega=omega, &
                              rd=rd, cp=cp, p_zero=p_zero,                 &
                              scaling_factor=scaling )
    call feign_initial_density_config( tracer_background=0.0_r_def,           &
                                       tracer_max=1.0_r_def,                  &
                                       r1=0.0_r_def, x1=0.0_r_def,            &
                                       y1=0.0_r_def, z1=0.0_r_def,            &
                                       r2=0.0_r_def, x2=0.0_r_def,            &
                                       y2=0.0_r_def, z2=0.0_r_def,            &
                                       sample_init_rho=.false.)
    call feign_idealised_config( test=idealised_test_gravity_wave )

    ! Create top level mesh collection
    mesh_collection = mesh_collection_type()
    ! Create top level function space collection
    function_space_collection = function_space_collection_type()

    this%qr = quadrature_xyoz_type(3, quadrature_rule)

    this%qr_proxy = this%qr%get_quadrature_proxy()
    nqp_h=this%qr_proxy%np_xy
    nqp_v=this%qr_proxy%np_z

    ! Dummy mesh mod has 9 cells, 3 layers and is uniform in vertical
    mesh_id = mesh_collection%add_unit_test_mesh( PLANE_BI_PERIODIC )

    this%wt_fs => function_space_collection%get_fs(mesh_id, element_order, WTHETA)
    this%w0_fs => function_space_collection%get_fs(mesh_id, element_order, W0)
    this%w3_fs => function_space_collection%get_fs(mesh_id, element_order, W3)

    this%exner   = field_type( vector_space = this%w3_fs )
    exner_proxy = this%exner%get_proxy()

    this%height_w3 = field_type( vector_space = this%w3_fs )
    height_w3_proxy = this%height_w3%get_proxy()

    ndf_w3  = exner_proxy%vspace%get_ndf( )
    undf_w3 = exner_proxy%vspace%get_undf()


    this%theta = field_type( vector_space = this%wt_fs )
    theta_proxy = this%theta%get_proxy()

    this%height_wt = field_type( vector_space = this%wt_fs )
    height_wt_proxy = this%height_wt%get_proxy()

    ndf_wt  = theta_proxy%vspace%get_ndf( )
    undf_wt = theta_proxy%vspace%get_undf()

    do i = 1,3
      this%chi(i)   = field_type( vector_space = this%w0_fs )
      chi_p(i)    = this%chi(i)%get_proxy()
    end do

    ndf_w0      = chi_p(1)%vspace%get_ndf( )
    dim_w0      = chi_p(1)%vspace%get_dim_space( )
    undf_w0     = chi_p(1)%vspace%get_undf()
    allocate(this%basis_w0(dim_w0,ndf_w0,nqp_h,nqp_v))


  end subroutine setUp

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  subroutine tearDown( this )

    use gungho_configuration_mod, only: final_configuration

    implicit none

    class(hydrostatic_exner_test_type), intent(inout) :: this

    deallocate( this%basis_w0 )

    call function_space_collection%clear()
    call mesh_collection%clear()
    call final_configuration()

    ! Finalise YAXT
    call xt_finalize()
    ! Clear the stored MPI communicator
    call clear_comm()

  end subroutine tearDown

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @test( npes=[1] )
  subroutine test_bottom_up( this )

    use hydrostatic_exner_kernel_mod, only : hydrostatic_exner_code
    use gungho_feign_config_mod,      only : feign_formulation_config

    implicit none

    class(hydrostatic_exner_test_type), intent(inout) :: this

    real(r_def), parameter :: dx = 6000.0_r_def, &
                              dy = 1000.0_r_def, &
                              dz = 2000.0_r_def
    real(r_def), parameter :: tol = 1.0e-6_r_def

    type(field_type) :: chi(3)
    type(field_proxy_type )   :: chi_p(3)

    type(field_proxy_type )   :: exner_proxy, theta_proxy
    type(field_proxy_type )   :: height_wt_proxy, height_w3_proxy

    integer :: i, j, k, cell, err

    integer                 :: nlayers, nqp_h, nqp_v
    integer                 :: ndf_w0, ndf_wt, ndf_w3
    integer                 :: undf_w0, undf_wt, undf_w3
    integer                 :: element_order
    integer, pointer        :: map_w3(:), map_wt(:), map_w0(:) => null()
    real                    :: answer

    real(kind=r_def), pointer :: xp(:,:) => null()
    real(kind=r_def), pointer :: zp(:) => null()
    real(kind=r_def), pointer :: wh(:), wv(:) => null()

    call feign_formulation_config(transport_only=.false., rotating=.false.,  &
                                  use_moisture=.false.,                      &
                                  shallow=.true., use_physics=.false.,       &
                                  use_wavedynamics=.true.,                   &
                                  dry_static_adjust=.false.,                 &
                                  dlayer_on=.false.,                         &
                                  set_hydrostatic_init = .true.,             &
                                  init_exner_bt        = .true.,             &
                                  hard_wired_j         = .false.,            &
                                  hard_wired_detj      = .false.  )

    ! Make a coordinate field with a function space
    do i = 1,3
      chi(i) = field_type( vector_space = this%w0_fs )
      chi_p(i) = chi(i)%get_proxy()
    end do

    ! Compute coordinates
    cell = 1
    do j = 1,3
      do i = 1,3
        map_w0 => chi_p(1)%vspace%get_cell_dofmap( cell )
        do k = 0,3
          chi_p(1)%data(map_w0(1) + k) = real(i-1)*dx
          chi_p(2)%data(map_w0(1) + k) = real(j-1)*dy
          chi_p(3)%data(map_w0(1) + k) = real(k)  *dz
        end do
        cell = cell + 1
      end do
    end do

    ! Test kernel
    exner_proxy  = this%exner%get_proxy()
    theta_proxy = this%theta%get_proxy()
    height_wt_proxy = this%height_wt%get_proxy()
    height_w3_proxy = this%height_w3%get_proxy()

    nlayers = exner_proxy%vspace%get_nlayers()
    nqp_h=this%qr_proxy%np_xy
    nqp_v=this%qr_proxy%np_z
    xp=>this%qr_proxy%points_xy
    zp=>this%qr_proxy%points_z

    ndf_w3  = exner_proxy%vspace%get_ndf( )
    undf_w3 = exner_proxy%vspace%get_undf()

    ndf_wt  = theta_proxy%vspace%get_ndf( )
    undf_wt = theta_proxy%vspace%get_undf()

    ndf_w0  = chi_p(1)%vspace%get_ndf( )
    undf_w0 = chi_p(1)%vspace%get_undf()

    call chi_p(1)%vspace%compute_basis_function( &
         this%basis_w0, ndf_w0, nqp_h, nqp_v, xp, zp )

    cell = 1

    map_w3  => exner_proxy%vspace%get_cell_dofmap( cell )
    map_wt  => theta_proxy%vspace%get_cell_dofmap( cell )
    map_w0  => chi_p(1)%vspace%get_cell_dofmap( cell )

    ! Create the data
    exner_proxy%data(:) = 0.0_r_def
    theta_proxy%data(:) = 300.0_r_def
    height_wt_proxy%data(:) = 0.0_r_def
    height_w3_proxy%data(:) = 1000.0_r_def

    call hydrostatic_exner_code( nlayers,                                   &
                                 exner_proxy%data,                          &
                                 theta_proxy%data,                          &
                                 height_wt_proxy%data,                      &
                                 height_w3_proxy%data,                      &
                                 chi_p(1)%data,                             &
                                 chi_p(2)%data,                             &
                                 chi_p(3)%data,                             &
                                 ndf_w3, undf_w3,                           &
                                 map_w3, ndf_wt,                            &
                                 undf_wt, map_wt,                           &
                                 ndf_w0, undf_w0,                           &
                                 map_w0, this%basis_w0                      &
                                 )

    k = 1
    answer = 0.9591617_r_def
    @assertEqual(answer, exner_proxy%data(map_w3(1)+k), tol)

  end subroutine test_bottom_up


