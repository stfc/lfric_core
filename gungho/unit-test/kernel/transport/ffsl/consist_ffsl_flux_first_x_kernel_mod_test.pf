!> @brief Test the first 1D PPM flux computation in the x direction

module consist_ffsl_flux_first_x_kernel_mod_test

  use constants_mod, only : i_def, r_tran, r_def, l_def
  use pFUnit_Mod

  implicit none

  private

  public :: test_all

  @TestCase
  type, public, extends(TestCase) :: consist_ffsl_flux_first_x_test_type
    private
  contains
    procedure test_all
  end type consist_ffsl_flux_first_x_test_type

contains

 !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @Test
  subroutine test_all( this )

    use, intrinsic :: iso_fortran_env,  only: real64
    use consist_ffsl_flux_first_x_kernel_mod,   only: consist_ffsl_flux_first_x_code
    use transport_enumerated_types_mod, only: horizontal_monotone_none

    implicit none

    class(consist_ffsl_flux_first_x_test_type), intent(inout) :: this

    real(kind=r_tran), parameter :: tol = 1.0e-12_r_tran   ! r_tran 64-bit
    real(kind=r_tran)            :: answer, use_tol

    integer(kind=i_def), parameter :: nlayers = 1
    integer(kind=i_def), parameter :: ndf_w3 = 1
    integer(kind=i_def), parameter :: ndf_w2 = 4
    integer(kind=i_def), parameter :: stencil_size = 9
    integer(kind=i_def), parameter :: stencil_extent = ( stencil_size - 1_i_def ) / 2_i_def
    integer(kind=i_def), parameter :: undf_w2 = ndf_w2*nlayers
    integer(kind=i_def), parameter :: undf_w3 = ndf_w3*nlayers*stencil_size
    integer(kind=i_def), parameter :: order = 2

    integer(kind=i_def), dimension(ndf_w3)              :: map_w3
    integer(kind=i_def), dimension(ndf_w2)              :: map_w2
    integer(kind=i_def), dimension(ndf_w3,stencil_size) :: stencil_map

    real(kind=r_tran), dimension(undf_w3) :: field
    real(kind=r_tran), dimension(undf_w2) :: dep_pts
    real(kind=r_tran), dimension(undf_w2) :: flux_high
    real(kind=r_tran), dimension(undf_w2) :: flux_low
    real(kind=r_tran), dimension(undf_w2) :: flux_int
    real(kind=r_tran), dimension(undf_w2) :: frac_dry_flux
    real(kind=r_tran), dimension(undf_w3) :: detj
    real(kind=r_tran), dimension(undf_w3) :: rho_d

    integer(kind=i_def), parameter         :: stencil_size_p = 9
    integer(kind=i_def), parameter         :: ndf_wp = 1
    integer(kind=i_def), parameter         :: undf_wp = ndf_wp*nlayers*stencil_size_p
    integer(kind=i_def), dimension(ndf_wp) :: map_wp
    real(kind=r_def), dimension(undf_wp)   :: panel_id
    logical(kind=l_def)                    :: edges_spt =.false.
    integer(kind=i_def), dimension(ndf_wp,stencil_size_p) :: stencil_map_p

    real(kind=r_tran)   :: dt
    integer(kind=i_def) :: monotone

    ! Set up maps
    stencil_map(1,:) = (/ 5, 4, 3, 2, 1, 6, 7, 8, 9 /)
    map_w2(:) = (/ 1, 2, 3, 4 /)
    map_w3(1) = 1
    map_wp(1) = 1
    panel_id(:) = 1.0_r_def

    ! Set no monotonicity
    monotone = horizontal_monotone_none

    ! Set up field to have quadratic profile
    field(:) = (/ 17.0_r_tran, 10.0_r_tran, 5.0_r_tran, &
                  2.0_r_tran,  1.0_r_tran,  2.0_r_tran, &
                  5.0_r_tran,  10.0_r_tran, 17.0_r_tran /)

    ! Initialise flux to zero before each test
    flux_int(:) = 0.0_r_tran
    flux_high(:) = 0.0_r_tran
    flux_low(:) = 0.0_r_tran

    ! Volume factor
    detj(:) = 2.0_r_tran

    ! Dry density
    rho_d(:) = 1.5_r_tran

    ! Test with integer departure distance
    dep_pts(:) = 1.0_r_tran
    frac_dry_flux(:) = 0.0_r_tran
    dt = 1.0_r_tran
    call consist_ffsl_flux_first_x_code( nlayers,        &
                                         flux_high,      &
                                         flux_low,       &
                                         flux_int,       &
                                         field,          &
                                         stencil_size,   &
                                         stencil_map,    &
                                         detj,           &
                                         stencil_size,   &
                                         stencil_map,    &
                                         rho_d,          &
                                         stencil_size,   &
                                         stencil_map,    &
                                         panel_id,       &
                                         stencil_size_p, &
                                         stencil_map_p,  &
                                         dep_pts,        &
                                         frac_dry_flux,  &
                                         order,          &
                                         monotone,       &
                                         stencil_extent, &
                                         dt,             &
                                         edges_spt,      &
                                         ndf_w2,         &
                                         undf_w2,        &
                                         map_w2,         &
                                         ndf_w3,         &
                                         undf_w3,        &
                                         map_w3,         &
                                         ndf_wp,         &
                                         undf_wp,        &
                                         map_wp )
    ! Get correct tolerance
    if ( r_tran == real64 ) then
      use_tol = tol
    else
      use_tol = 10.0_r_tran*spacing( maxval( flux_int(1:4) ) )
    end if
    answer = 6.0_r_tran
    @assertEqual(answer, flux_int(1), use_tol)
    answer = 3.0_r_tran
    @assertEqual(answer, flux_int(3), use_tol)
    answer = 0.0_r_tran
    @assertEqual(answer, flux_high(3), use_tol)
    answer = 0.0_r_tran
    @assertEqual(answer, flux_low(3), use_tol)

    ! Test with positive distance
    dep_pts(:) = 0.4_r_tran
    frac_dry_flux(:) = 1.2_r_tran
    dt = 1.0_r_tran
    flux_int(:) = 0.0_r_tran
    flux_high(:) = 0.0_r_tran
    flux_low(:) = 0.0_r_tran
    call consist_ffsl_flux_first_x_code( nlayers,        &
                                         flux_high,      &
                                         flux_low,       &
                                         flux_int,       &
                                         field,          &
                                         stencil_size,   &
                                         stencil_map,    &
                                         detj,           &
                                         stencil_size,   &
                                         stencil_map,    &
                                         rho_d,          &
                                         stencil_size,   &
                                         stencil_map,    &
                                         panel_id,       &
                                         stencil_size_p, &
                                         stencil_map_p,  &
                                         dep_pts,        &
                                         frac_dry_flux,  &
                                         order,          &
                                         monotone,       &
                                         stencil_extent, &
                                         dt,             &
                                         edges_spt,      &
                                         ndf_w2,         &
                                         undf_w2,        &
                                         map_w2,         &
                                         ndf_w3,         &
                                         undf_w3,        &
                                         map_w3,         &
                                         ndf_wp,         &
                                         undf_wp,        &
                                         map_wp )
    answer = 1.704_r_tran
    @assertEqual(answer, flux_high(1), use_tol)
    answer = 1.224_r_tran
    @assertEqual(answer, flux_high(3), use_tol)

    ! Test with negative distance
    dep_pts(:) = -0.4_r_tran
    frac_dry_flux(:) = -1.2_r_tran
    dt = 1.0_r_tran
    flux_int(:) = 0.0_r_tran
    flux_high(:) = 0.0_r_tran
    flux_low(:) = 0.0_r_tran
    call consist_ffsl_flux_first_x_code( nlayers,        &
                                         flux_high,      &
                                         flux_low,       &
                                         flux_int,       &
                                         field,          &
                                         stencil_size,   &
                                         stencil_map,    &
                                         detj,           &
                                         stencil_size,   &
                                         stencil_map,    &
                                         rho_d,          &
                                         stencil_size,   &
                                         stencil_map,    &
                                         panel_id,       &
                                         stencil_size_p, &
                                         stencil_map_p,  &
                                         dep_pts,        &
                                         frac_dry_flux,  &
                                         order,          &
                                         monotone,       &
                                         stencil_extent, &
                                         dt,             &
                                         edges_spt,      &
                                         ndf_w2,         &
                                         undf_w2,        &
                                         map_w2,         &
                                         ndf_w3,         &
                                         undf_w3,        &
                                         map_w3,         &
                                         ndf_wp,         &
                                         undf_wp,        &
                                         map_wp )
    answer = -1.224_r_tran
    @assertEqual(answer, flux_high(1), use_tol)
    answer = -1.704_r_tran
    @assertEqual(answer, flux_high(3), use_tol)

  end subroutine test_all

end module consist_ffsl_flux_first_x_kernel_mod_test
