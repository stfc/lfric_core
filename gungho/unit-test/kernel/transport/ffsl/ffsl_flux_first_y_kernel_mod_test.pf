!> @brief Test the first 1D PPM flux computation in the y direction

module ffsl_flux_first_y_kernel_mod_test

  use constants_mod, only : i_def, r_tran, r_def, l_def
  use pFUnit_Mod

  implicit none

  private

  public :: test_all

  @TestCase
  type, public, extends(TestCase) :: ffsl_flux_first_y_test_type
    private
  contains
    procedure test_all
  end type ffsl_flux_first_y_test_type

contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @Test
  subroutine test_all( this )

    use, intrinsic :: iso_fortran_env,  only: real64
    use ffsl_flux_first_y_kernel_mod,   only: ffsl_flux_first_y_code
    use transport_enumerated_types_mod, only: horizontal_monotone_none

    implicit none

    class(ffsl_flux_first_y_test_type), intent(inout) :: this

    real(kind=r_tran), parameter :: tol = 1.0e-12_r_tran   ! r_tran 64-bit
    real(kind=r_tran)            :: answer, use_tol

    integer(kind=i_def), parameter :: nlayers = 1
    integer(kind=i_def), parameter :: ndf_w3 = 1
    integer(kind=i_def), parameter :: ndf_w2 = 4
    integer(kind=i_def), parameter :: stencil_size = 9
    integer(kind=i_def), parameter :: stencil_extent = ( stencil_size - 1_i_def ) / 2_i_def
    integer(kind=i_def), parameter :: undf_w2 = ndf_w2*nlayers
    integer(kind=i_def), parameter :: undf_w3 = ndf_w3*nlayers*stencil_size
    integer(kind=i_def), parameter :: order = 2

    integer(kind=i_def), dimension(ndf_w3)              :: map_w3
    integer(kind=i_def), dimension(ndf_w2)              :: map_w2
    integer(kind=i_def), dimension(ndf_w3,stencil_size) :: stencil_map

    real(kind=r_tran), dimension(undf_w3) :: field
    real(kind=r_tran), dimension(undf_w2) :: dep_pts
    real(kind=r_tran), dimension(undf_w2) :: flux
    real(kind=r_tran), dimension(undf_w3) :: detj

    integer(kind=i_def), parameter         :: stencil_size_p = 9
    integer(kind=i_def), parameter         :: ndf_wp = 1
    integer(kind=i_def), parameter         :: undf_wp = ndf_wp*nlayers*stencil_size_p
    integer(kind=i_def), dimension(ndf_wp) :: map_wp
    real(kind=r_def), dimension(undf_wp)   :: panel_id
    logical(kind=l_def)                    :: edges_spt
    integer(kind=i_def), dimension(ndf_wp,stencil_size_p) :: stencil_map_p

    real(kind=r_tran)   :: dt, x, const(3)
    integer(kind=i_def) :: monotone, i, order_spt


    ! Set up maps
    stencil_map(1,:) = (/ 5, 4, 3, 2, 1, 6, 7, 8, 9 /)
    stencil_map_p = stencil_map
    map_w2(:) = (/ 1, 2, 3, 4 /)
    map_w3(1) = 1
    map_wp(1) = 1
    panel_id(:) = 1.0_r_def
    edges_spt =.false.

    ! Set no monotonicity
    monotone = horizontal_monotone_none

    ! Set up field to have quadratic profile
    field(:) = (/ 17.0_r_tran, 10.0_r_tran, 5.0_r_tran, &
                  2.0_r_tran,  1.0_r_tran,  2.0_r_tran, &
                  5.0_r_tran,  10.0_r_tran, 17.0_r_tran /)

    ! Initialise flux to zero before each test
    flux(:) = 0.0_r_tran

    ! Volume factor
    detj(:) = 2.0_r_tran

    ! Test with integer departure distance
    dep_pts(:) = 1.0_r_tran
    dt = 1.0_r_tran
    call ffsl_flux_first_y_code( nlayers,        &
                                 flux,           &
                                 field,          &
                                 stencil_size,   &
                                 stencil_map,    &
                                 panel_id,       &
                                 stencil_size_p, &
                                 stencil_map_p,  &
                                 dep_pts,        &
                                 detj,           &
                                 stencil_size,   &
                                 stencil_map,    &
                                 order,          &
                                 monotone,       &
                                 stencil_extent, &
                                 dt,             &
                                 edges_spt,      &
                                 ndf_w2,         &
                                 undf_w2,        &
                                 map_w2,         &
                                 ndf_wp,         &
                                 undf_wp,        &
                                 map_wp,         &
                                 ndf_w3,         &
                                 undf_w3,        &
                                 map_w3 )
    ! Get correct tolerance
    if ( r_tran == real64 ) then
      use_tol = tol
    else
      use_tol = 10.0_r_tran*spacing( maxval( flux(1:4) ) )
    end if
    answer = 4.0_r_tran
    @assertEqual(answer, flux(2), use_tol)
    answer = 2.0_r_tran
    @assertEqual(answer, flux(4), use_tol)

    ! Test with positive distance
    dep_pts(:) = 0.75_r_tran
    dt = 1.0_r_tran
    flux(:) = 0.0_r_tran
    call ffsl_flux_first_y_code( nlayers,        &
                                 flux,           &
                                 field,          &
                                 stencil_size,   &
                                 stencil_map,    &
                                 panel_id,       &
                                 stencil_size_p, &
                                 stencil_map_p,  &
                                 dep_pts,        &
                                 detj,           &
                                 stencil_size,   &
                                 stencil_map,    &
                                 order,          &
                                 monotone,       &
                                 stencil_extent, &
                                 dt,             &
                                 edges_spt,      &
                                 ndf_w2,         &
                                 undf_w2,        &
                                 map_w2,         &
                                 ndf_wp,         &
                                 undf_wp,        &
                                 map_wp,         &
                                 ndf_w3,         &
                                 undf_w3,        &
                                 map_w3 )
    answer = 2.59375_r_tran
    @assertEqual(answer, flux(2), use_tol)
    answer = 1.46875_r_tran
    @assertEqual(answer, flux(4), use_tol)

    ! Test with negative distance
    dep_pts(:) = -0.75_r_tran
    dt = 1.0_r_tran
    flux(:) = 0.0_r_tran
    call ffsl_flux_first_y_code( nlayers,        &
                                 flux,           &
                                 field,          &
                                 stencil_size,   &
                                 stencil_map,    &
                                 panel_id,       &
                                 stencil_size_p, &
                                 stencil_map_p,  &
                                 dep_pts,        &
                                 detj,           &
                                 stencil_size,   &
                                 stencil_map,    &
                                 order,          &
                                 monotone,       &
                                 stencil_extent, &
                                 dt,             &
                                 edges_spt,      &
                                 ndf_w2,         &
                                 undf_w2,        &
                                 map_w2,         &
                                 ndf_wp,         &
                                 undf_wp,        &
                                 map_wp,         &
                                 ndf_w3,         &
                                 undf_w3,        &
                                 map_w3 )
    answer = -1.46875_r_tran
    @assertEqual(answer, flux(2), use_tol)
    answer = -2.59375_r_tran
    @assertEqual(answer, flux(4), use_tol)

    ! Testing special_edges_treatment (edges_spt=T)
    ! We create a moving edge along the stencil by changing the panel_id
    ! to test all the cases
    !
    ! (1) Testing PPM (order_spt=2)

    const =(/2.0_r_tran, -1.0_r_tran, 0.5_r_tran/)
    order_spt = 2_i_def
    detj(:) = 1.0_r_tran
    dep_pts(:) = 0.6_r_tran
    dt = 1.0_r_tran
    answer = 2.336_r_tran
    edges_spt = .true.

    do i=1,9
      x = real(i-1,r_tran)
      field(i)= const(1)+const(2)*x + const(3)*x*x
    end do

    panel_id(:) = 1.0_r_def
    do i = 1,9
       panel_id(1:i) = 2.0_r_def
       flux(:) = 0.0_r_tran
       call ffsl_flux_first_y_code( nlayers,        &
                                    flux,           &
                                    field,          &
                                    stencil_size,   &
                                    stencil_map,    &
                                    panel_id,       &
                                    stencil_size_p, &
                                    stencil_map_p,  &
                                    dep_pts,        &
                                    detj,           &
                                    stencil_size,   &
                                    stencil_map,    &
                                    order_spt,      &
                                    monotone,       &
                                    stencil_extent, &
                                    dt,             &
                                    edges_spt,      &
                                    ndf_w2,         &
                                    undf_w2,        &
                                    map_w2,         &
                                    ndf_wp,         &
                                    undf_wp,        &
                                    map_wp,         &
                                    ndf_w3,         &
                                    undf_w3,        &
                                    map_w3 )
       panel_id(:) = 1.0_r_def
       @assertEqual(answer, flux(2), use_tol)
    end do

    ! (2) Testing Nirvana (order_spt=1)

    order_spt = 1_i_def

    panel_id(:) = 1.0_r_def
    do i = 1,9
       panel_id(1:i) = 2.0_r_def
       flux(:) = 0.0_r_tran
       call ffsl_flux_first_y_code( nlayers,        &
                                    flux,           &
                                    field,          &
                                    stencil_size,   &
                                    stencil_map,    &
                                    panel_id,       &
                                    stencil_size_p, &
                                    stencil_map_p,  &
                                    dep_pts,        &
                                    detj,           &
                                    stencil_size,   &
                                    stencil_map,    &
                                    order_spt,      &
                                    monotone,       &
                                    stencil_extent, &
                                    dt,             &
                                    edges_spt,      &
                                    ndf_w2,         &
                                    undf_w2,        &
                                    map_w2,         &
                                    ndf_wp,         &
                                    undf_wp,        &
                                    map_wp,         &
                                    ndf_w3,         &
                                    undf_w3,        &
                                    map_w3 )
       panel_id(:) = 1.0_r_def
       @assertEqual(answer, flux(2), use_tol)
    end do

  end subroutine test_all

end module ffsl_flux_first_y_kernel_mod_test
