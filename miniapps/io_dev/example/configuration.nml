!=======================  IO_Dev configuration namelist =======================
&io_dev
  field_initialisation  = 'analytic'
  time_variation        = 'none'
  ancil_update_freq     = 1
  field_kind            = 'real'
/
!==============================================================================

&files
  diag_stem_name            = 'diagIODev'
  checkpoint_stem_name      = 'restartIoDev'
  start_dump_filename       = 'real/IODev_dump_C12'
  start_dump_directory      = '../data'
  time_varying_input_path   = 'time_var_input'
/

&io
  use_xios_io               = .true.
  write_diag                = .true.
  write_dump                = .false.
  write_fluxes              = .false.
  diagnostic_frequency      = 1
  nodal_output_on_w3        = .false.
  subroutine_timers         = .false.
  subroutine_counters       = .false.
  checkpoint_read           = .false.
  checkpoint_write          = .false.
/

&time
 calendar='timestep'
 timestep_start='1'
 timestep_end='1'
/

&timestepping
  method             = 'semi_implicit'
  dt                 = 86400.0
  alpha              = 0.5
  tau_u              = 0.5
  tau_t              = 0.5
  tau_r              = 0.5
  outer_iterations   = 4
  inner_iterations   = 1
  runge_kutta_method = 'ssp3'
  spinup_period      = 1
  spinup_alpha       = .false.
  spinup_winds       = .false.
/

&base_mesh
  filename        = 'mesh_C3.nc'
  prime_mesh_name = 'C3'
  geometry        = 'spherical'
  partitioner     = 'cubedsphere'
  topology        = 'fully_periodic'
  fplane          = .false.
  f_lat_deg       = 45.0
/

&extrusion
  method           = 'uniform'
  domain_top       = 30000.0
  number_of_layers = 3
/

&boundaries
  limited_area    = .false.
/

&finite_element
  cellshape        = 'quadrilateral'
  element_order    = 0
  rehabilitate     = .true.
  coord_order      = 1
  coord_system     = 'alphabetaz'
/

&logging
  run_log_level='info'
/

&planet
  gravity        = 9.80665
  radius         = 6371229.0
  omega          = 7.292116E-5
  rd             = 287.05
  cp             = 1005.0
  p_zero         = 100000.0
  scaling_factor = 1.0
/

&formulation
  l_multigrid = .false.
/

&biperiodic_deppt
  method             = 'euler'
  n_dep_pt_iterations     = 1
/

&partitioning
  panel_decomposition = 'auto'
/

&domain_size
  planar_domain_min_x = -1.0
  planar_domain_max_x =  1.0
  planar_domain_min_y = -1.0
  planar_domain_max_y =  1.0
/

